<Window x:Class="AGG_Productions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AGG_Productions"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Title="AGG Productions" Height="510" Width="854">
    <Grid>
        <Image Source="Images/Background.jpg" HorizontalAlignment="Left" Height="481" VerticalAlignment="Top" Width="848"/>
        <Image Source="Images/Games.jpg" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="192"/>
        <Button x:Name="Chaotic" HorizontalAlignment="Left" Click="Chaotic_Click" VerticalAlignment="Top" Height="50" Width="192" Margin="0,48,0,0">
            <StackPanel>
                <Image Source="Images/Chaotic.jpg"/>
            </StackPanel>
        </Button>
        <TextBox x:Name="NoGame" HorizontalAlignment="Center" Height="44" TextWrapping="Wrap" Text="No Game Selected" VerticalAlignment="Center" Width="298" TextAlignment="Center" Margin="373,140,177,297" FontSize="30" Background="Transparent" BorderBrush="#00ABADB3" Cursor="Hand" IsTabStop="False" Focusable="False" IsReadOnly="True" IsHitTestVisible="False"/>
        <TextBox x:Name="SelectGame" HorizontalAlignment="Center" Height="127" TextWrapping="Wrap" Text="Choose a game on the left side of the screen" VerticalAlignment="Center" Width="298" TextAlignment="Center" Margin="373,224,177,130" FontSize="24" Background="Transparent" BorderBrush="#00ABADB3" Cursor="Hand" IsTabStop="False" Focusable="False" IsReadOnly="True" IsHitTestVisible="False"/>
        <WebBrowser x:Name="Chaotic_Notes" Visibility="Collapsed" Margin="199.4,0,0,44" Initialized="Chaotic_Notes_Initialized"/>
        <Button x:Name="Chaotic_Install" Content="Install Chaotic" Visibility="Collapsed" HorizontalAlignment="Left" Click="Chaotic_Install_Click" VerticalAlignment="Top" Height="29" Width="150" Margin="450,442,0,0"/>
    </Grid>
</Window>
