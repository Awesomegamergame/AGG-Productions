<Window x:Class="AGG_Productions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AGG_Productions"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Title="AGG Productions" Height="510" Width="854">
    <Grid>
        <Image Source="Images/Background.jpg" HorizontalAlignment="Left" Height="481" VerticalAlignment="Top" Width="848"/>
        <Image Source="Images/Games.jpg" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="192"/>
        <Button x:Name="Chaotic" HorizontalAlignment="Left" Click="Chaotic_Click" VerticalAlignment="Top" Height="50" Width="192" Margin="0,48,0,0">
            <StackPanel>
                <Image Source="Images/Chaotic.jpg"/>
            </StackPanel>
        </Button>
        <TextBox x:Name="NoGame" HorizontalAlignment="Center" Height="44" TextWrapping="Wrap" Text="No Game Selected" VerticalAlignment="Center" Width="298" TextAlignment="Center" Margin="373,140,177,297" FontSize="30" Background="Transparent" BorderBrush="#00ABADB3" Cursor="Hand" IsTabStop="False" Focusable="False" IsReadOnly="True" IsHitTestVisible="False"/>
        <TextBox x:Name="SelectGame" HorizontalAlignment="Center" Height="127" TextWrapping="Wrap" Text="Choose a game on the left side of the screen" VerticalAlignment="Center" Width="298" TextAlignment="Center" Margin="373,224,177,130" FontSize="24" Background="Transparent" BorderBrush="#00ABADB3" Cursor="Hand" IsTabStop="False" Focusable="False" IsReadOnly="True" IsHitTestVisible="False"/>
        <WebBrowser x:Name="Chaotic_Notes" Visibility="Collapsed" Margin="199.4,0,0,44" Initialized="Chaotic_Notes_Initialized"/>
        <Button x:Name="Chaotic_Install" Content="Install Chaotic" Visibility="Collapsed" HorizontalAlignment="Left" Click="Chaotic_Install_Click" VerticalAlignment="Top" Height="29" Width="150" Margin="450,442,0,0"/>
        <ComboBox x:Name="VersionBox2" Visibility="Collapsed" HorizontalAlignment="Left" Margin="232,442,0,0" VerticalAlignment="Top" Width="150" Height="29" Initialized="Chaotic_Version_Initialized" SelectionChanged="VersionBox_SelectionChanged" IsEnabled="False"/>
        <Button x:Name="PlayButton" Content="Play" Visibility="Collapsed" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="29" Margin="668,442,0,0" Initialized="PlayButton_Initialized" Click="PlayButton_Click" IsEnabled="False"/>
        <Image x:Name="UpdateScreen" Source="Images/UpdateBackground.jpg" Visibility="Collapsed" HorizontalAlignment="Left" Height="482" VerticalAlignment="Top" Width="849" Margin="0,0,-0.333,0" Initialized="UpdateScreen_Initialized"/>
        <Label x:Name="UpdateText1" Visibility="Collapsed" Content="Launcher Update Available" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="268,140,267.667,0" FontSize="25" Initialized="UpdateText1_Initialized" Height="44" Width="313"/>
        <Label x:Name="UpdateText2" Visibility="Collapsed" Content="Do You Want To Update" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Initialized="UpdateText2_Initialized"/>
        <Button x:Name="Yes" Content="Yes" Visibility="Collapsed" Click="Yes_Click" HorizontalAlignment="Right" VerticalAlignment="Center" Width="85" Height="40" Background="#99249C1E" Margin="0,296,450,146" Initialized="Yes_Initialized"/>
        <Button x:Name="No" Content="No" Visibility="Collapsed" Click="No_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="85" Height="40" Background="#99B53B20" Margin="450,296,313.667,146" Initialized="No_Initialized"/>
    </Grid>
</Window>
